<h3>Invoice Details</h3>
<p>
  Invoice Number: <%= SecureRandom.hex(6).upcase %><br>
  Date: <%= Time.current.strftime('%d %b %Y') %>
</p>
<h3>Bill To:</h3>
<p><%= @user.email %></p>
<h3>Ship To:</h3>
<p>Same as billing address</p>
<h3>Cart Items:</h3>
<table border="1" cellspacing="0" cellpadding="5">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @user.cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product.price %></td>
        <td><%= item.quantity * item.product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h3>Total:</h3>
<p>Subtotal: <%= @user.cart.cart_items.sum { |item| item.quantity * item.product.price } %></p>
