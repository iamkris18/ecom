<h1 class="text-center my-4">Your Profile</h1>

<%= form_with model: @user, url: update_profile_user_path, method: :patch, local: true, multipart: true do |f| %>
  <div class="container">
    <div class="row mb-3">
      <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Update Your Profile</h5>

            <!-- Email field -->
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email', value: @user.email %>
            </div>

            <!-- Profile picture -->
            <div class="mb-3">
              <%= f.label :profile_picture, class: 'form-label' %>
              <%= f.file_field :profile_picture, class: 'form-control' %>

              <% if @user.profile_picture.attached? %>
                <div class="mt-2">
                  <p>Current Picture:</p>
                  <%= image_tag @user.profile_picture.variant(resize_to_limit: [100, 100]), class: "img-thumbnail" %>
                </div>
              <% end %>
            </div>

            <!-- Submit button -->
            <div class="mb-3 text-center">
              <%= f.submit "Update Profile", class: "btn btn-primary w-100" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<hr>

<div class="container text-center">
  <%= link_to "Your Cart", cart_path, class: "btn btn-secondary mx-2" %>
  <%= link_to "Go to Products", products_path, class: "btn btn-info mx-2" %>
  <%= link_to "Logout", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" }, class: "btn btn-danger mx-2" %>
</div>
