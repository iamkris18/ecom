<h1>Your Profile</h1>

<%= form_with model: @user, url: update_profile_user_path, method: :patch, local: true, multipart: true do |f| %>
  <div>
    <label>Email</label>
    <%= f.email_field :email, value: @user.email %>
  </div>
  
  <div>
    <label>Profile Picture</label>
    <%= f.file_field :profile_picture %>

    <% if @user.profile_picture.attached? %>
  <p>Current Picture:</p>
  <%= image_tag @user.profile_picture.variant(resize_to_limit: [100, 100]) %>
<% end %>

  </div>

  <%= f.submit "Update Profile" %>
<% end %>

<hr>

<%= link_to "Go to Products", products_path, class: "button" %>
  <%= link_to "Logout", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" } %>

