<h1 class="text-center my-4">Your Profile</h1>

<%= form_with model: @user, url: update_profile_user_path, method: :patch, local: true, multipart: true do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-12">
          <div class="card-body">

            <!-- Profile Picture Section -->
            <div class="text-center mb-4">
              <h5 class="card-title">Update Your Profile Picture</h5>

              <!-- Display current profile picture if attached -->
              <% if @user.profile_picture.attached? %>
                <%= image_tag @user.profile_picture.variant(resize_to_limit: [200, 200]), class: "rounded-circle mb-3", alt: "Profile Picture" %>
              <% else %>
                <%= image_tag 'default-profile.png', class: "rounded-circle mb-3", alt: "Default Profile Picture" %>
              <% end %>

              <!-- File Input for Profile Picture -->
              <%= f.file_field :profile_picture, class: 'form-control-file' %>
            </div>

            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email', value: @user.email %>
            </div>

            <!-- Submit Button -->
            <div class="mb-3 text-center">
              <%= f.submit "Update Profile", class: "btn btn-primary w-100" %>
            </div>

          </div>
      </div>
    </div>
  </div>
<% end %>

<hr class="my-5">

<!-- Additional Links and Actions -->
<div class="container text-center">
  <%= button_to "Download Invoice", generate_invoice_path, method: :post, class: "btn btn-primary mb-3" %>
</div>

<div class="container text-center">
  <%= link_to "Your Cart", cart_path, class: "btn btn-secondary mx-2" %>
  <%= link_to "Go to Products", products_path, class: "btn btn-info mx-2" %>
  <%= link_to "Logout", logout_path, method: :delete, data: { confirm: "Are you sure you want to log out?" }, class: "btn btn-danger mx-2" %>
</div>

