<h1>Your Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.product.name %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= number_to_currency(cart_item.product.price, unit: "") %></td>
          <td><%= number_to_currency(cart_item.product.price * cart_item.quantity, unit: "") %></td>
          <td>
            <%= button_to 'Remove One', remove_cart_item_path(cart_item.id), method: :delete, data: { confirm: 'Are you sure you want to remove one quantity?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><strong>Subtotal:</strong> <%= number_to_currency(@total, unit: "") %></p>

  <% if @discounted_total.present? %>
    <p><strong>Discounted Total:</strong> <%= number_to_currency(@discounted_total, unit: "") %></p>
  <% end %>

  <%= form_with url: apply_coupon_path, method: :post, local: true do |f| %>
    <div>
      <%= f.label :coupon_code, "Enter Coupon Code" %>
      <%= f.text_field :coupon_code %>
    </div>
    <%= f.submit "Apply Coupon" %>
  <% end %>

<% end %>
