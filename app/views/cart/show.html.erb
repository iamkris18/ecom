<h1>Your Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.product.name %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= number_to_currency(cart_item.product.price, unit: "") %></td>
          <td><%= number_to_currency(cart_item.product.price * cart_item.quantity , unit: "") %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back', products_path%>


  <p><strong>Total:</strong> <%= @cart_items.sum { |item| item.product.price * item.quantity }%></p>
<% end %>
