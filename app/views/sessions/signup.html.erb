<h1>Signup</h1>

<%= form_with url: signup_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email, required: true %>
  </div>
  
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, required: true %>
  </div>

  <div>
  <%= form.label :referral_code, "Referral Code (Optional)" %>
  <%= form.text_field :referral_code %>
  </div>

  <div>
    <%= form.submit 'Sign Up' %>
  </div>
<% end %>

<%= link_to 'Already have an account? Login here.', login_path %>

<%= flash[:alert] if flash[:alert] %>
<%= flash[:notice] if flash[:notice] %>
